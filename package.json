{
  "name": "showlyrics",
  "version": "1.0.0",
  "description": "Desktop app to display Spotify lyrics in a floating window",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "spotify",
    "lyrics",
    "electron",
    "desktop"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "genius-lyrics-api": "^3.0.2",
    "node-spotify-api": "^1.1.1"
  },
  "build": {
    "appId": "com.showlyrics.app",
    "productName": "ShowLyrics",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*"
    ],
    "icon": "assets/icon.png",
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png",
      "category": "AudioVideo"
    },
    "mac": {
      "target": "dmg"
    }
  }
}
